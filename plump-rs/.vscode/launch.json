{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'plump-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=plump-rs",
                    "--package=plump-rs"
                ],
                "filter": {
                    "name": "plump-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'plump-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=plump-rs",
                    "--package=plump-rs"
                ],
                "filter": {
                    "name": "plump-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
